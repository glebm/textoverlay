{
  "name": "textoverlay",
  "version": "0.3.0",
  "description": "Simple decorator for textarea elements",
  "main": "./dist/textoverlay.js",
  "types": "./dist/textoverlay.d.ts",
  "scripts": {
    "format": "clang-format -style=Google -i src/*.ts",
    "lint": "tslint --fix --format verbose -p .",
    "build": "yarn run clean && run-s format lint && run-p build:*",
    "build:dist": "run-p build:dist:*",
    "build:dist:es2015": "tsc",
    "build:dist:es5": "webpack --env=min",
    "build:docs": "run-p build:docs:*",
    "build:docs:html": "pug src/docs --out docs",
    "build:docs:js": "webpack --config webpack.config.docs.js",
    "clean": "rm -fr dist/*.js dist/*.d.ts dist/*.map docs/*.*",
    "dev": "run-p dev:*",
    "dev:docs": "run-p dev:docs:*",
    "dev:docs:html": "pug src/docs --out docs --watch",
    "dev:docs:js": "webpack-dev-server -d --config webpack.config.docs.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuku-t/textoverlay.git"
  },
  "author": "Yuku Takahashi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yuku-t/textoverlay/issues"
  },
  "homepage": "https://github.com/yuku-t/textoverlay#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "bootstrap": "4.0.0-beta.2",
    "clang-format": "^1.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "highlight.js": "^9.10.0",
    "npm-run-all": "^4.0.2",
    "postcss-apply": "^0.6.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-nesting": "^2.3.1",
    "pug-cli": "^1.0.0-alpha6",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglify-js": "^2.8.20",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  }
}
